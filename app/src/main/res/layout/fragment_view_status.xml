<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vs_username_label" android:text="Username: "
                android:textSize="24sp" android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vs_username_tv"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/vs_username_label"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/vs_username_label"
                app:layout_constraintBottom_toBottomOf="@+id/vs_username_label"/>
        <TextView
                android:text="Win: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vs_win_label"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/vs_username_label" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/vs_username_label"/>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vs_win_tv"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@+id/vs_win_label"
                app:layout_constraintStart_toEndOf="@+id/vs_win_label" android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/vs_win_label"/>
        <TextView
                android:text="Lose: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vs_lose_label"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/vs_win_label" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/vs_win_label"/>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vs_lose_tv"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="@+id/vs_lose_label"
                app:layout_constraintStart_toEndOf="@+id/vs_lose_label" android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/vs_lose_label"/>
        <Button
                android:text="Start Game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/start_game_btn"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/vs_lose_label" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="76dp"/>
        <Button
                android:text="Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/logout_btn"
                app:layout_constraintTop_toTopOf="@+id/start_game_btn"
                app:layout_constraintBottom_toBottomOf="@+id/start_game_btn" android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/start_game_btn"
                android:layout_marginStart="52dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>