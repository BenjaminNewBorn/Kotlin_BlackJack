<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rank_user_name"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
    />
    <TextView
            android:text="TextView"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rank_win_rate" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>